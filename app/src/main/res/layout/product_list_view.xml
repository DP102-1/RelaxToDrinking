<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProduct_ProductList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product_noimage" />

    <TextView
        android:id="@+id/tvProductName_ProductList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="商品名稱"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProduct_ProductList"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivGoProductSpecification_ProductList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_drink" />

    <ImageView
        android:id="@+id/ivProductL_ProductList"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivProductM_ProductList"
        app:layout_constraintTop_toBottomOf="@+id/ivProductM_ProductList"
        app:srcCompat="@drawable/product_l" />

    <ImageView
        android:id="@+id/ivProductM_ProductList"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/tvProductName_ProductList"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product_m" />

    <TextView
        android:id="@+id/tvPriceL_ProductList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大杯價格"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivProductL_ProductList"
        app:layout_constraintStart_toEndOf="@+id/ivProductL_ProductList"
        app:layout_constraintTop_toTopOf="@+id/ivProductL_ProductList" />

    <TextView
        android:id="@+id/tvPriceM_ProductList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中杯價格"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivProductM_ProductList"
        app:layout_constraintStart_toEndOf="@+id/ivProductM_ProductList"
        app:layout_constraintTop_toTopOf="@+id/ivProductM_ProductList" />

</androidx.constraintlayout.widget.ConstraintLayout>