<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".admin.StoreManagementFragment">

    <Button
        android:id="@+id/btSubmit_StoreManagement"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/kind_button"
        android:textSize="24sp"
        android:text="確定"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btChoiceFromAlbum_StoreManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="從相簿選擇..."
        app:layout_constraintBottom_toBottomOf="@+id/ivStoreLogo_StoreManagement"
        app:layout_constraintStart_toEndOf="@+id/ivStoreLogo_StoreManagement"
        app:layout_constraintTop_toTopOf="@+id/ivStoreLogo_StoreManagement" />

    <EditText
        android:id="@+id/etStoreName_StoreManagement"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName_StoreManagement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvName_StoreManagement"
        app:layout_constraintTop_toTopOf="@+id/tvName_StoreManagement" />

    <EditText
        android:id="@+id/etStorePhone_StoreManagement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tvPhone_StoreManagement"
        app:layout_constraintEnd_toEndOf="@+id/etStoreName_StoreManagement"
        app:layout_constraintStart_toEndOf="@+id/tvPhone_StoreManagement"
        app:layout_constraintTop_toTopOf="@+id/tvPhone_StoreManagement" />

    <EditText
        android:id="@+id/etStoreAddress_StoreManagement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddress_StoreManagement"
        app:layout_constraintEnd_toEndOf="@+id/etStorePhone_StoreManagement"
        app:layout_constraintStart_toEndOf="@+id/tvAddress_StoreManagement"
        app:layout_constraintTop_toTopOf="@+id/tvAddress_StoreManagement" />

    <ImageView
        android:id="@+id/ivBack_StoreManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivStoreLogo_StoreManagement"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/no_image"
        app:layout_constraintStart_toStartOf="@+id/tvAddress_StoreManagement"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress_StoreManagement" />

    <TextView
        android:id="@+id/tvTitle_StoreManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="店家資訊管理"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName_StoreManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:text="店家名稱"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle_StoreManagement" />

    <TextView
        android:id="@+id/tvPhone_StoreManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:text="店家電話"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvName_StoreManagement"
        app:layout_constraintTop_toBottomOf="@+id/tvName_StoreManagement" />

    <TextView
        android:id="@+id/tvAddress_StoreManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:text="店家地址"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvPhone_StoreManagement"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone_StoreManagement" />

</androidx.constraintlayout.widget.ConstraintLayout>